# Express server port
PORT=4000

# Comma separated list of allowed origins for CORS (e.g. http://localhost:4173,https://your-gh-pages-domain)
CORS_WHITELIST=http://localhost:4173

# Simple rate limit configuration
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=120

# SQLite database file path (relative to project root)
DATABASE_FILE=./backend/data/habit.sqlite

# Node environment (development/production)
NODE_ENV=development